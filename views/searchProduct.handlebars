<div class="container text-center" style="margin-top:20px">

    <div class="row">
        <div class="col-md-8">
            {{#each product}}
            <div class="card product">
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <img src="https://via.placeholder.com/140x100" alt="">
                        </div>
                        <div class="col-6">
                            <strong> {{this.name}} </strong> <br> {{this.description}}
                        </div>
                        <div class="col-3 priceQuantity">
                            Price: ${{this.price}} <br> Quantity: {{this.quantity}}
                            <br>

                            <button type="submit" class="btn btn-primary wishlistButton" data-seller="{{this.UserId}}" data-id="{{this.id}}"><i
                                    class="far fa-star feedStar"></i>
                            </button><br>

                            <button type="submit" class="btn btn-primary message-seller" data-seller="{{this.UserId}}" data-id="{{this.id}}"><i
                                    class="far fa-comment-alt"></i>
                            </button>

                        </div>

                    </div>


                </div>
            </div>

        </div>

        {{/each}}
         <div class="col-4">
            <div class="card postCard">
                <div class="card-header newPost"> <strong>New Post</strong> </div>
                <div class="card-body">
                    <form class="new-post">
                        <div class="form-group">
                            <label for="product-name">Product Name</label>
                            <input type="text" class="form-control" id="product-name" placeholder="Enter product name" required>
                        </div>
                     
                        <select class="custom-select" id="category" required>
                             <option value=""> Category</option>
                               {{#each category}}
                            <option value="{{this.id}}"> {{this.name}} </option>
                           {{/each}}
                         
                        </select>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="price">Price</label>
                                    <input type="number" class="form-control" id="price" placeholder="Price" required>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="quantity">Quantity</label>
                                    <input type="number" class="form-control" id="quantity" placeholder="Quantity" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea name="" id="description" cols="30" rows="3" placeholder="enter description here" class="form-control"></textarea>

                        </div>


                        {{!-- <input type="file" class="form-control-file" id="post-pic"> --}}
                        <button type="submit" class="btn btn-primary feedPost">Post</button>
                        <div class="test">

                        </div>
                     
                        
                    </form>

                    <!--name, category, price, description, quantity   -->
                </div>

            </div>


        </div>
    </div>
    
