        <div class="row">
            <div class="col-md-6 offset-md-2 offset-md-right-2">
               <h3>{{product.name}}</h3> 
            </div>
        </div>

        <div class="row" id="message-listing" data-total-messages="{{totalNumberOfMessages}}">

